    <view style="flex:1" class="flex flex-column flex-jcsb">
      <view style="width:100%">订单编号：<text style="color:#888">54634134545541</text></view>
      <view class="flex w100 flex-jcsb" style="flex:1">
        <text>钟情十字项链</text>
        <text>￥ 20.0</text>
      </view>
      <view class="flex w100 flex-jcsb" style="flex:1">
        <text class="font14" style="color:#888">文字描述</text>
        <text>X 2</text>
      </view>
    </view>
  </view>
  <view class="flex flex-jcsb">
    <view style="color:#888">进行中</view>
    <view class="font18" style="color:red">实付:￥20.0</view>
  </view>
</view>
